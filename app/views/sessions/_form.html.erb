<%= form_with(model: @user, url: sessions_path, local: true) do |form| %>
  <div class="field">
    <%= form.label :username, 'Your Username' %>
    <%= form.text_field :username %>
  </div>
  <div class="field">
    <%= form.label :password, 'Your Password' %>
    <%= form.password_field :password %>
  </div>
  <div class="actions">
    <%= form.submit "Log in" %>
  </div>
<% end %>
